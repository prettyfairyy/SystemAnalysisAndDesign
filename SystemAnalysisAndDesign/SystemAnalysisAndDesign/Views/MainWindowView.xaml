<Window x:Class="CarRentalSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MORENT - Đăng nhập" Height="600" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <!-- Phần bên trái - Hình ảnh -->
        <Border Grid.Column="0" Background="#F5F7FF" Grid.ColumnSpan="2">
            <Grid>
                <Image Source="/Resources/car_image.jpg" Stretch="UniformToFill"/>
                <TextBlock Text="lorem islum abc xyz" VerticalAlignment="Bottom" Margin="20" 
                           Foreground="White" FontSize="24" FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- Phần bên phải - Form đăng nhập -->
        <StackPanel Grid.Column="2" Margin="40,0,40,0" VerticalAlignment="Center">
            <TextBlock Text="MORENT" Foreground="#3563E9" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Right" Margin="0,0,0,20"/>

            <TextBlock Text="Welcome" FontSize="28" FontWeight="Bold" Margin="0,0,0,10" Height="63"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="btnLoginTab" Content="Login" Width="100" Height="40" 
                        Background="#E0E9FF" Foreground="#1A202C" BorderThickness="0" 
                        FontWeight="SemiBold" Margin="0,0,10,0" Click="btnLoginTab_Click"/>
                <Button x:Name="btnRegisterTab" Content="Register" Width="100" Height="40" 
                        Background="#3563E9" Foreground="White" BorderThickness="0" 
                        FontWeight="SemiBold" Click="btnRegisterTab_Click"/>
            </StackPanel>

            <TextBlock Text="Email Address" Margin="0,10,0,5" FontWeight="Medium" Height="24" Width="431"/>
            <TextBox x:Name="txtEmail" Height="40" Padding="10,0" VerticalContentAlignment="Center"
                     BorderBrush="#E2E8F0" BorderThickness="1"/>

            <TextBlock Text="Password" Margin="0,15,0,5" FontWeight="Medium" Height="31"/>
            <Grid>
                <PasswordBox x:Name="txtPassword" Height="40" Padding="10,0" VerticalContentAlignment="Center"
                         BorderBrush="#E2E8F0" BorderThickness="1"/>
                <Button x:Name="btnShowPassword" Content="👁" Width="30" Height="30" 
                        HorizontalAlignment="Right" Margin="0,0,5,0" Background="Transparent"
                        BorderThickness="0" Click="btnShowPassword_Click"/>
            </Grid>

            <Button x:Name="btnLogin" Content="Login" Height="45" Background="#3563E9" 
                    Foreground="White" BorderThickness="0" FontWeight="SemiBold" 
                    Margin="0,30,0,0" Click="btnLogin_Click"/>

            <TextBlock Text="Don't have an account? Register" HorizontalAlignment="Center" 
                       Margin="0,15,0,0" Height="48" Width="363">
                <TextBlock.Inlines>
                    <Run Text="Don't have an account?"/>
                    <Run Text=" Register" Foreground="#3563E9" FontWeight="SemiBold" 
                         MouseDown="RegisterText_MouseDown" Cursor="Hand"/>
                </TextBlock.Inlines>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
