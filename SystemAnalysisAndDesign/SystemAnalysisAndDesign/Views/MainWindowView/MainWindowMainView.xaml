                                                <TextBlock Text="{Binding MaxSpeed}" VerticalAlignment="Center" TextAlignment="Center"/>
                                            </StackPanel>
                                            -->
                                        </Grid>
                                    </Border>

                                    <!-- Row 3: Price and Rent Button -->
                                    <Border Grid.Row="3" Background="White" CornerRadius="0,0,20,20" BorderThickness="0,1,0,0" BorderBrush="LightGray">
                                        <StackPanel>
                                            <!-- Binding tới PricePerDay, định dạng tiền tệ -->
                                            <TextBlock Text="{Binding PricePerDay, StringFormat='VND {0:N0}/day'}"
                                                       TextAlignment="Center" FontWeight="Bold" FontSize="20" Padding="0,15,0,20"/>
                                            <!-- Binding Button Command -->
                                            <Button Content ="Rent"
