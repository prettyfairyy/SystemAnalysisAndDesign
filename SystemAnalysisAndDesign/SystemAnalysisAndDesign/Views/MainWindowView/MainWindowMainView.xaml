                        <Ellipse Fill="#1A237E" Width="20" Height="20"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text ="Car Sales"
                                       FontWeight="Bold"
                                       FontSize ="20"
                                       Padding="0,0,0,10"/>
                            <TextBlock TextWrapping ="Wrap"
