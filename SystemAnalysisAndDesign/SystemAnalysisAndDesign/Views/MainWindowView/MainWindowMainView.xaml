<Window x:Class="SystemAnalysisAndDesign.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemAnalysisAndDesign"
        mc:Ignorable="d"
        Title="MainWindowMainView" Height="Auto" Width="1200">
    <Grid>
        <!-- Header -->
        <DockPanel Background="White" Height="60" VerticalAlignment="Top">
            <TextBlock Text="MORENT" FontSize="20" FontWeight="Bold" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <TextBox Width="200" Height="30" Margin="20,0,0,0" VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Text="Search something here"
                     Padding="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="⚙" Margin="0,0,10,0" Width="40" Height="40"/>
                <Button Content="🔔" Margin="0,0,10,0" Width="40" Height="40"/>
                <Button Content="Sign In" Background="#007BFF" Foreground="#FFFFFF"
                        Width="80" Height="40"/>
            </StackPanel>
        </DockPanel>

        <!-- Main Content -->
        <Grid Margin="20,80,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Pháº§n hÃ¬nh áº£nh vÃ  dá»‹ch vá»¥ -->
                <RowDefinition Height="Auto" /> <!-- Pháº§n tháº» (cards) -->
                <RowDefinition Height="Auto" /> <!-- Text -->
                <RowDefinition Height="Auto" /> <!-- Choose car -->
                <RowDefinition Height="Auto" /> <!-- Text -->
                <RowDefinition Height="Auto" /> <!-- Brand name -->
                <RowDefinition Height="Auto" /> <!-- Text -->
                <RowDefinition Height="Auto" /> <!-- List -->
                <RowDefinition Height="Auto" /> <!-- Footer -->
            </Grid.RowDefinitions>
            
            <!-- Pháº§n tháº» (cards) -->
            <UniformGrid Grid.Row="0" Columns="2" HorizontalAlignment="Center" VerticalAlignment="Top">
            
                <!-- First Card -->
                <Border Background="#E3F2FD" CornerRadius="10"
                        Width="Auto" Height="200"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                   FontWeight="Bold"
                                   Text ="The Best Platform for Car Rental"
                                   FontSize ="18"
                                   Margin="0,0,0,5"/>
                        <TextBlock TextWrapping ="Wrap"
                                   Text ="Ease of doing a car rental safely and reliably. Of course at a low price."
                                   FontSize ="14"
                                   Margin="0,0,0,15"/>
                        <Button Content ="Rental Car"
                                Background="#007BFF"
                                Foreground="#FFFFFF"
                                Width ="100"
                                HorizontalAlignment ="Left"/>
                    </StackPanel>
                </Border>
            
                <!-- Second Card -->
                <Border Background="#E3F2FD" CornerRadius ="10"
                        Width ="Auto" Height ="200"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                    Text ="The Best Platform for Car Rental"
                                    FontWeight="Bold"
                                    FontSize ="18"
                                    Margin="0,0,0,5"/>
                        <TextBlock TextWrapping ="Wrap"
                                   Text ="Ease of doing a car rental safely and reliably. Of course at a low price."
                                   FontSize ="14"
                                   Margin="0,0,0,15"/>
                        <Button Content ="Learn More"
                                Background="#007BFF"
                                Foreground="#FFFFFF"
                                Width ="100"
                                HorizontalAlignment ="Left"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
            
            <!-- Pháº§n hÃ¬nh áº£nh vÃ  dá»‹ch vá»¥ -->
            <Grid Grid.Row="1" Margin="0,30,0,-150">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" /> <!-- Pháº§n hÃ¬nh áº£nh -->
                    <ColumnDefinition Width="Auto" /> <!-- Pháº§n dá»‹ch vá»¥ -->
                </Grid.ColumnDefinitions>

                <!-- Pháº§n hÃ¬nh áº£nh xe hÆ¡i -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,100,0">
                    <Ellipse Fill="#E3E3E3" Width="300" Height="300" Opacity="0.5"/>
                    <Image Source="/Images/car.jpg" Width="350" Height="200" Stretch="Uniform"/>
                </StackPanel>

                <!-- Pháº§n dá»‹ch vá»¥ -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Our Services"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1A237E"
                               Margin="0,0,0,20"/>

                    <!-- Dá»‹ch vá»¥ 1 -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Ellipse Fill="#1A237E" Width="20" Height="20"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text ="Car Hire"
                                       FontWeight="Bold"
                                       FontSize ="20"/>
                            <TextBlock TextWrapping ="Wrap"
                                       Text ="We pride ourselves in always going the extra mile for our customers."
                                       FontSize ="16"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Dá»‹ch vá»¥ 2 -->
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Ellipse Fill="#1A237E" Width="20" Height="20"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text ="Car Sales"
                                       FontWeight="Bold"
                                       FontSize ="20"/>
                            <TextBlock TextWrapping ="Wrap"
                                       Text ="We sale the best luxury cars across the world at a competitive price."
                                       FontSize ="16"/>
                        </StackPanel>
                    </StackPanel>
                        
                        
                        <!-- Dá»‹ch vá»¥ 3 -->
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Ellipse Fill="#1A237E" Width="20" Height="20"/>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text ="Car Sales"
                                           FontWeight="Bold"
                                           FontSize ="20"/>
                                <TextBlock TextWrapping ="Wrap"
                                           Text ="We sale the best luxury cars across the world at a competitive price."
                                           FontSize ="16"/>
                            </StackPanel>
                        </StackPanel>
                </StackPanel>
            </Grid>
            
            <!--Choose car to rent-->
            <Grid Grid.Row="2">
                <StackPanel Margin ="10" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock TextWrapping ="Wrap"
                               Text ="We have everything you need"
                               FontWeight="Bold"
                               FontSize ="18"/>
                </StackPanel>
            </Grid>
            
            <!-- Chua biet code khuc nay lam sao cho ok -->
            <Grid Grid.Row="3" Margin="0,0,0,50">
                <StackPanel Margin ="10" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock TextWrapping ="Wrap"
                               Text ="Chua biet khuc nay code sao cho phu hop"
                               FontWeight="Bold"
                               FontSize ="18"/>
                </StackPanel>
            </Grid>
            
            <!-- Brandname -->
            <Grid Grid.Row="4">
                <StackPanel Margin ="10" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock TextWrapping ="Wrap"
                               Text ="Our Luxury Brand"
                               FontWeight="Bold"
                               FontSize ="18"/>
                </StackPanel>
            </Grid>
            
            <Grid Grid.Row="5" HorizontalAlignment="Center" Margin="0,0,0,50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" /> <!-- Brand 1 -->
                    <ColumnDefinition Width="Auto" /> <!-- Brand 2 -->
                    <ColumnDefinition Width="Auto" /> <!-- Brand 3 -->
                    <ColumnDefinition Width="Auto" /> <!-- Brand 4 -->
                    <ColumnDefinition Width="Auto" /> <!-- Brand 5 -->
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="#E3F2FD" CornerRadius ="10"
                        Width ="150" Height ="Auto"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                   TextAlignment="Center"
                                   Text ="Audi"
                                   FontSize ="18"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="#E3F2FD" CornerRadius ="10"
                        Width ="150" Height ="Auto"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                   TextAlignment="Center"
                                   Text ="Mercedez"
                                   FontSize ="18"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Background="#E3F2FD" CornerRadius ="10"
                        Width ="150" Height ="Auto"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                   TextAlignment="Center"
                                   Text ="Land Rover"
                                   FontSize ="18"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="3" Background="#E3F2FD" CornerRadius ="10"
                        Width ="150" Height ="Auto"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                   TextAlignment="Center"
                                   Text ="Ferrari"
                                   FontSize ="18"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="4" Background="#E3F2FD" CornerRadius ="10"
                        Width ="150" Height ="Auto"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                   TextAlignment="Center"
                                   Text ="Tesla"
                                   FontSize ="18"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Benefit -->
            <Grid Grid.Row="6">
                <StackPanel Margin ="10" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock TextWrapping ="Wrap"
                               FontWeight="Bold"
                               FontSize ="18"
                               TextAlignment="Center">
                        Find the best experience 
                        <LineBreak/>
                        with our luxury car
                    </TextBlock>
                </StackPanel>
            </Grid>
            
            <Grid Grid.Row="7" HorizontalAlignment="Center" Margin="0,40,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" /> <!-- Brand 1 -->
                    <ColumnDefinition Width="3*" /> <!-- Brand 2 -->
                    <ColumnDefinition Width="3*" /> <!-- Brand 3 -->
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="#FFFFFF"
                        Width ="Auto" Height ="Auto"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                   Text ="Book with flexibility"
                                   FontWeight="Bold"
                                   FontSize ="20"
                                   Margin="0,0,0,20"
                                   TextAlignment="Center"/>
                        <TextBlock TextWrapping ="Wrap"
                                   Text ="Easily find car and book with no charge fee."
                                   TextAlignment="Center"
                                   FontSize ="16"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="#FFFFFF"
                        Width ="Auto" Height ="Auto"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                   Text ="Trusted and free"
                                   FontWeight="Bold"
                                   FontSize ="20"
                                   Margin="0,0,0,20"
                                   TextAlignment="Center"/>
                        <TextBlock TextWrapping ="Wrap"
                                   Text ="We are completely free to use - no hidden charges or fee."
                                   TextAlignment="Center"
                                   FontSize ="16"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Background="#FFFFFF"
                        Width ="Auto" Height ="Auto"
                        Margin ="10">
                    <StackPanel Margin ="10">
                        <TextBlock TextWrapping ="Wrap"
                                   Text ="Book with flexibility"
                                   FontWeight="Bold"
                                   FontSize ="20"
                                   Margin="0,0,0,20"
                                   TextAlignment="Center"/>
                        <TextBlock TextWrapping ="Wrap"
                                   Text ="With 2 years of experience, we are ready to help find your perfect car"
                                   TextAlignment="Center"
                                   FontSize ="16"
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Footer -->
            <Border Grid.Row="8" Background="#E3F2FD" CornerRadius="10">
                <Grid Margin="10,0,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" /> <!-- Text Area -->
                        <ColumnDefinition Width="Auto" /> <!-- Placeholder Area -->
                        <ColumnDefinition Width="Auto" /> <!-- Button Area -->
                    </Grid.ColumnDefinitions>

                    <!-- Text Area -->
                    <StackPanel Grid.Column="0" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#000000"
                                   TextAlignment="Center">
                            Subscribe And Join Us
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Border CornerRadius="5">
                            <TextBox Width="600" Height="40" Margin="5" VerticalAlignment="Center" Padding="10" Text="Your mail"/>
                        </Border>
                    </StackPanel>

                    <!-- Button Area -->
                    <Button Grid.Column="2"
                            Content="Next"
                            FontSize="16"
                            Background="#007BFF"
                            Foreground="#FFFFFF"
                            Width="100"
                            Height="40"
                            VerticalAlignment="Center"
                            Margin="10"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>