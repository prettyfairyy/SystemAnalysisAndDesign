                                                    Command="{Binding DataContext.RentCarCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"/> <!-- CommandParameter là chính Car object hiện tại -->
                                        </StackPanel>
                                    </Border>
                                </Grid>
