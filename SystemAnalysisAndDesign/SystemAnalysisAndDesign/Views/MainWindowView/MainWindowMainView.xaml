                               FontSize ="30"/>
                </StackPanel>
            </Grid>
            
            <Grid Grid.Row="5" HorizontalAlignment="Center" Margin="0,0,0,50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" /> <!-- Brand 1 -->
